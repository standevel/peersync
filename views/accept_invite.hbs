<!DOCTYPE html>
<html>

<head>
    <title>Registration Form</title>
    <style>
        body {
            background-color: #333;
            /* Deep grey background with shade 800 */
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .registration-form {
            background-color: white;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            min-width: 500px;
            /* Minimum width of 500px */
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            font-weight: bold;
        }

        input[type="text"],
        input[type="password"] {
            width: 95%;
            padding: 10px;
            margin-top: 5px;
            border: 1px solid #ccc;
            border-radius: 3px;
        }

        .submit-button-container,
        .title {
            text-align: center;
            /* Center the button within the container */
        }

        .submit-button {
            background-color: #000;
            /* Black background */
            color: #fff;
            /* White text color */
            padding: 10px 20px;
            border: none;
            border-radius: 3px;
            cursor: pointer;
        }

        .spinner {
            display: none;
            border: 4px solid white;
            /* rgba(0, 0, 0, 0.1);*/
            border-top: 4px solid #333;
            /* Spinner color */
            border-radius: 50%;
            width: 20px;
            height: 20px;
            animation: spin 1s linear infinite;
        }

        .message {

            margin: 10px;
        }

        .error {
            color: red;
        }

        .success {
            color: green;
        }

        @keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }
    </style>
</head>

<body>
    <div class="registration-form">
        <div class="title">
            <h2>Account Set up</h2>
        </div>
        <form id="form">
            <div class="form-group">
                <label for="first-name">Email:</label>
                <input type="text" id="email" name="email" required value="{{email}}" readonly>
            </div>
            <div class="form-group">
                <label for="first-name">First Name:</label>
                <input type="text" id="first-name" name="first-name" required>
            </div>
            <div class="form-group">
                <label for="last-name">Last Name:</label>
                <input type="text" id="last-name" name="last-name" required>
            </div>
            <div class="form-group">
                <label for="phone">Phone:</label>
                <input type="text" id="phone" name="phone" required>
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" required>
            </div>
            <div class="message" id="message"></div>
            <div class="submit-button-container">
                <button id="submit-button" type="button" class="submit-button">
                    <span id="button-text">Submit</span>
                    <div class="spinner" id="spinner"></div>
                </button>

            </div>

        </form>
    </div>
    <script>
        const token = "{{token}}";
        const link = "{{link}}";
        const email = "{{email}}";

        document.getElementById('submit-button').addEventListener('click', async function () {
            try {
                document.getElementById('email').value = email;
                console.log('submitting form with token: ',);
                // Disable the submit button
                document.getElementById('submit-button').disabled = true;
                document.getElementById('button-text').style.display = 'none';
                // Display the spinner
                document.getElementById('spinner').style.display = 'inline-block';

                // Simulate a POST request (Replace with actual fetch API call)
                const form = document.getElementsByTagName('form')[0];

                const firstName = document.getElementById('first-name').value;
                const lastName = document.getElementById('last-name').value;
                const phone = document.getElementById('phone').value;
                const password = document.getElementById('password').value;

                console.log('form value: ', { firstName, lastName, phone, password });
                formData = {
                    firstName: firstName,
                    lastName: lastName,
                    phone: phone,
                    password: password
                };

                // Define the PATCH endpoint URL
                //var endpoint = 'http://localhost:3000/api/v1/account/accept-success'; // Replace with your actual endpoint URL

                // Send a PATCH request using the Fetch API
                //`http://localhost:3000/api/v1/account/accept-success/${token}`
                const response = await fetch(link, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',// Specify the content type as JSON
                    },
                    body: JSON.stringify(formData) // Convert the form data to JSON
                });
                console.log('response: ', response);
                if (response.ok) {
                    console.log('response  is ok');
                    const body = await response.json();
                    console.log('response body: ', body, response.ok, response.status);
                    // Handle a successful response here
                    console.log('PATCH request was successful. ', response.body);
                    document.getElementById('submit-button').disabled = false;
                    document.getElementById('spinner').style.display = 'none';
                    document.getElementById('button-text').style.display = 'inline-block';
                    document.getElementById('message').innerHTML = `Your account has been set up successfully! We are redirecting you to login page`;
                    document.getElementById('message').classList.add('success');

                    const loginUri = body.loginUri;

                    console.log(token, loginUri);
                    console.log(" redirectUrl ", loginUri);

                    setTimeout(() => {

                        window.location.href = loginUri;
                    }, 5000);
                } else {
                    // Handle errors here
                    console.error('Accunt setup failed.');
                    document.getElementById('submit-button').disabled = false;
                    document.getElementById('spinner').style.display = 'none';
                    document.getElementById('button-text').style.display = 'inline-block';
                    document.getElementById('message').innerHTML = `Account set up failed! Please try again`;
                    document.getElementById('message').classList.add('error');
                }
            } catch (error) {
                // Handle network errors here
                console.error('Network error:', error);
            }

            setTimeout(function () {
                // You can add your Fetch API call here

                // After the request is complete, re-enable the button and hide the spinner
                document.getElementById('submit-button').disabled = false;
                document.getElementById('spinner').style.display = 'none';
                document.getElementById('button-text').style.display = 'inline-block';
            }, 2000); // Simulated delay for demonstration purposes (2 seconds)
        });
    </script>

</body>

</html>